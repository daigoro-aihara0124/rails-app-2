
<%= form_for @reservation do |f| %>
<div class="form-input">
<h2>ルーム予約フォーム</h2>
<table>
  <tr>
    <th><%= f.label :start_date, "開始日" %></th>
    <td><%= f.date_field :start_date %></td>
  </tr>
  <tr>
    <th><%= f.label :end_date, "終了日" %></th>
    <td><%= f.date_field :end_date %></td>
  </tr>
  <tr>
    <th><%= f.label :num_people, "人数" %></th>
    <td><%= f.number_field :num_people %></td>
  </tr>
  <tr>
    <th><%= f.label :post_id, "ルームid" %></th>
    <td><%= f.number_field :post_id %></td>
  </tr>
</table>
<%= f.hidden_field :user_id, value: current_user.id %>
<div>
  <ul>
    <li><%= f.submit "ルームを予約する"%></li>
  </ul>
</div>
</div>
<% end %>
